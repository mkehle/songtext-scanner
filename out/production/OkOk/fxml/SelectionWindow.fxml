<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SelectionController">
   <children>
      <Label layoutX="26.0" layoutY="28.0" text="Entered songtext:">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <TextArea fx:id="textDisplay" editable="false" layoutX="26.0" layoutY="100.0" prefHeight="453.0" prefWidth="434.0" />
      <Label layoutX="524.0" layoutY="100.0" text="Enter the word you would like to search for">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="searchField" layoutX="524.0" layoutY="135.0" prefHeight="34.0" prefWidth="199.0" />
      <Button fx:id="searchButton" layoutX="730.0" layoutY="135.0" mnemonicParsing="false" onMouseClicked="#search" prefHeight="34.0" prefWidth="71.0" text="Search" />
      <Label fx:id="outputLabel" alignment="TOP_LEFT" layoutX="524.0" layoutY="181.0" prefHeight="101.0" prefWidth="382.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutX="524.0" layoutY="514.0" mnemonicParsing="false" onMouseClicked="#switchToMainScreen" prefHeight="34.0" prefWidth="122.0" text="Back">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label layoutX="524.0" layoutY="203.0" prefHeight="27.0" prefWidth="367.0" text="Choose the category you would like to search">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="categoryBox" layoutX="524.0" layoutY="242.0" prefWidth="150.0" />
   </children>
</AnchorPane>
